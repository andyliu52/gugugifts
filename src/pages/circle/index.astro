---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="The Gugu Gang | Loyalty Program" description="Join the gugu gang — earn points on every purchase, unlock rewards, and enjoy perks as a Neighbor, Regular, or Local Legend.">
  <Navbar />

  <main id="main-content" class="pt-28 pb-20">
    <!-- Hero -->
    <section class="max-w-3xl mx-auto px-6 text-center mb-20">
      <p class="text-xs uppercase tracking-[0.2em] text-gold mb-4 font-medium reveal">Loyalty Program</p>
      <h1 class="font-playfair text-4xl md:text-5xl font-medium mb-6 reveal reveal-delay-1">the gugu gang</h1>
      <div class="divider-gold mx-auto mb-6 reveal reveal-delay-2"></div>
      <p class="text-bronze-light text-lg leading-relaxed max-w-xl mx-auto reveal reveal-delay-3">
        Earn points every time you shop. Redeem them for rewards.
        No app. No card. Just your phone number.
      </p>
    </section>

    <!-- How it works -->
    <section class="max-w-4xl mx-auto px-6 mb-20">
      <h2 class="font-playfair text-2xl md:text-3xl text-center mb-12 reveal">How It Works</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center reveal reveal-delay-1">
          <div class="w-16 h-16 rounded-full bg-gold/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-gold font-playfair">1</span>
          </div>
          <h3 class="font-medium text-lg mb-2">Sign Up</h3>
          <p class="text-bronze-light text-sm leading-relaxed">Give your phone number at checkout. That's it — you're in.</p>
        </div>
        <div class="text-center reveal reveal-delay-2">
          <div class="w-16 h-16 rounded-full bg-gold/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-gold font-playfair">2</span>
          </div>
          <h3 class="font-medium text-lg mb-2">Earn Points</h3>
          <p class="text-bronze-light text-sm leading-relaxed">Every $1 you spend earns 10 points. Bonus points for referrals and more.</p>
        </div>
        <div class="text-center reveal reveal-delay-3">
          <div class="w-16 h-16 rounded-full bg-gold/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-gold font-playfair">3</span>
          </div>
          <h3 class="font-medium text-lg mb-2">Get Rewards</h3>
          <p class="text-bronze-light text-sm leading-relaxed">500 points = $5 off. Simple math, real savings.</p>
        </div>
      </div>
    </section>

    <!-- Points table -->
    <section class="max-w-2xl mx-auto px-6 mb-20">
      <h2 class="font-playfair text-2xl md:text-3xl text-center mb-8 reveal">Ways to Earn</h2>

      <!-- Every Purchase -->
      <div class="bg-white rounded-xl overflow-hidden shadow-sm mb-6 reveal reveal-delay-1">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-cream-dark">
              <th class="px-6 py-4 text-xs uppercase tracking-widest text-gold font-medium">Every Purchase</th>
              <th class="px-6 py-4 text-xs uppercase tracking-widest text-gold font-medium text-right">Points</th>
            </tr>
          </thead>
          <tbody>
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Every $1 spent</td><td class="px-6 py-4 text-sm font-medium text-right">10 pts</td></tr>
          </tbody>
        </table>
        <p class="px-6 pb-4 text-xs text-warmgray">Regulars earn 1.25x and Local Legends earn 1.5x on every purchase.</p>
      </div>

      <!-- One-Time Bonuses -->
      <div class="bg-white rounded-xl overflow-hidden shadow-sm reveal reveal-delay-2">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-cream-dark">
              <th class="px-6 py-4 text-xs uppercase tracking-widest text-gold font-medium">One-Time Bonuses</th>
              <th class="px-6 py-4 text-xs uppercase tracking-widest text-gold font-medium text-right">Points</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-cream-dark">
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Refer a friend</td><td class="px-6 py-4 text-sm font-medium text-right">250 pts</td></tr>
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Leave a Google review</td><td class="px-6 py-4 text-sm font-medium text-right">150 pts</td></tr>
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Complete your profile</td><td class="px-6 py-4 text-sm font-medium text-right">100 pts</td></tr>
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Add your birthday</td><td class="px-6 py-4 text-sm font-medium text-right">50 pts</td></tr>
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Follow on Instagram</td><td class="px-6 py-4 text-sm font-medium text-right">50 pts</td></tr>
            <tr><td class="px-6 py-4 text-sm text-bronze-light">Follow on Facebook</td><td class="px-6 py-4 text-sm font-medium text-right">50 pts</td></tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Tiers -->
    <section class="max-w-4xl mx-auto px-6 mb-20">
      <h2 class="font-playfair text-2xl md:text-3xl text-center mb-4 reveal">Membership Tiers</h2>
      <p class="text-bronze-light text-center mb-10 reveal reveal-delay-1">Based on annual spend, resetting each calendar year.</p>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white rounded-xl p-8 text-center shadow-sm reveal reveal-delay-1">
          <p class="text-xs uppercase tracking-[0.15em] text-warmgray mb-2">$0 – $149/yr</p>
          <h3 class="font-playfair text-xl mb-3">Neighbor</h3>
          <div class="divider-gold mx-auto mb-4"></div>
          <p class="text-bronze-light text-sm leading-relaxed">Base earn rate on every purchase.</p>
        </div>
        <div class="bg-white rounded-xl p-8 text-center shadow-sm border-2 border-gold/30 reveal reveal-delay-2">
          <p class="text-xs uppercase tracking-[0.15em] text-warmgray mb-2">$150 – $499/yr</p>
          <h3 class="font-playfair text-xl mb-3">Regular</h3>
          <div class="divider-gold mx-auto mb-4"></div>
          <ul class="text-bronze-light text-sm leading-relaxed space-y-1">
            <li>1.25x points on everything</li>
            <li>Early access to sales</li>
          </ul>
        </div>
        <div class="bg-white rounded-xl p-8 text-center shadow-sm border-2 border-gold reveal reveal-delay-3">
          <p class="text-xs uppercase tracking-[0.15em] text-gold mb-2">$500+/yr</p>
          <h3 class="font-playfair text-xl mb-3 text-gold">Local Legend</h3>
          <div class="divider-gold mx-auto mb-4"></div>
          <ul class="text-bronze-light text-sm leading-relaxed space-y-1">
            <li>1.5x points on everything</li>
            <li>Free gift wrapping always</li>
            <li>Birthday thank-you card</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="max-w-2xl mx-auto px-6 text-center">
      <div class="bg-bronze rounded-2xl p-10 md:p-14 reveal">
        <h2 class="font-playfair text-2xl md:text-3xl text-cream mb-4">Ready to join?</h2>
        <p class="text-cream/70 mb-8 leading-relaxed">
          Just give your phone number at checkout on your next visit.
          Or look up your balance below if you're already a member.
        </p>
        <a href="/circle/lookup" class="inline-block px-8 py-3 bg-gold text-white text-sm uppercase tracking-widest rounded hover:bg-gold-light transition-colors">
          Check Your Balance
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
