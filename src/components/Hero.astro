<section class="relative min-h-screen flex flex-col items-center justify-center px-6 overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 pattern-botanical opacity-40"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-cream via-transparent to-cream"></div>

  <!-- Decorative top accent line -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-24 bg-gradient-to-b from-transparent to-gold/30"></div>

  <div class="relative text-center max-w-3xl mx-auto">
    <!-- Grand opening badge -->
    <div class="reveal inline-flex items-center gap-2 px-5 py-2.5 border border-gold/40 rounded-full text-xs uppercase tracking-[0.2em] text-gold mb-10">
      <span class="w-1.5 h-1.5 bg-gold rounded-full animate-pulse"></span>
      Grand Opening &mdash; Coming Soon
    </div>

    <!-- Wordmark -->
    <h1 class="reveal reveal-delay-1 text-6xl sm:text-7xl md:text-8xl lg:text-9xl tracking-wide mb-6">
      <span class="font-semibold">gugu</span><span class="font-light">gifts</span>
    </h1>

    <!-- Tagline -->
    <p class="reveal reveal-delay-2 font-playfair italic text-xl sm:text-2xl md:text-3xl text-bronze-light mb-8">
      Curated gifts for life's beautiful moments
    </p>

    <!-- Divider -->
    <div class="reveal reveal-delay-3 divider-gold mx-auto mb-8"></div>

    <!-- Address -->
    <p class="reveal reveal-delay-4 text-sm uppercase tracking-[0.15em] text-warmgray">
      301 Tanger Dr, Suite 112 &bull; Terrell, TX 75126
    </p>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-warmgray">
    <span class="text-xs uppercase tracking-widest">Explore</span>
    <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
