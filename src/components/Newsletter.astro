---
const apiUrl = import.meta.env.PUBLIC_API_URL || "";
---

<section class="py-24 md:py-32 px-6">
  <div class="max-w-2xl mx-auto text-center">
    <p class="reveal text-xs uppercase tracking-[0.2em] text-gold mb-4 font-medium">Stay in Touch</p>
    <h2 class="reveal reveal-delay-1 font-playfair text-4xl md:text-5xl mb-6">Be the First to Know</h2>
    <div class="reveal reveal-delay-2 divider-gold mx-auto mb-8"></div>
    <p class="reveal reveal-delay-2 text-bronze-light mb-10 leading-relaxed">
      Sign up for updates on our grand opening, exclusive offers, new arrivals, and all things Gugu&nbsp;Gifts.
    </p>

    <form id="newsletter-form" data-api={apiUrl} class="reveal reveal-delay-3 flex flex-col sm:flex-row gap-3 max-w-md mx-auto mb-4">
      <input
        id="newsletter-email"
        type="email"
        placeholder="Your email address"
        class="flex-1 px-5 py-3.5 bg-cream-dark border border-gold/20 rounded-full text-sm text-bronze placeholder:text-warmgray focus:outline-none focus:border-gold/50 focus:ring-2 focus:ring-gold/10 transition-all"
        required
      />
      <button
        id="newsletter-btn"
        type="submit"
        class="px-8 py-3.5 bg-bronze text-cream text-sm uppercase tracking-widest font-medium rounded-full hover:bg-bronze-light transition-colors duration-200 whitespace-nowrap"
      >
        Notify Me
      </button>
    </form>
    <p id="newsletter-msg" class="text-sm mb-12 min-h-[1.5em]"></p>

    <!-- Social media -->
    <div class="reveal reveal-delay-4">
      <p class="text-xs uppercase tracking-[0.2em] text-warmgray mb-6">Follow Along</p>
      <div class="flex items-center justify-center gap-5">
        <!-- Instagram -->
        <a href="#" class="w-12 h-12 rounded-full border border-gold/30 flex items-center justify-center text-bronze-light hover:bg-gold hover:text-white hover:border-gold transition-all duration-200" aria-label="Instagram">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
