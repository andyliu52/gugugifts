            <path d="M100 180 C80 170 55 175 45 160 C55 155 80 150 100 170" />
            <path d="M100 140 C75 125 50 130 40 115 C55 108 78 110 100 130" />
            <path d="M100 100 C80 85 58 88 48 73 C62 68 82 72 100 90" />
            <!-- Right leaves -->
            <path d="M100 160 C120 150 145 155 155 140 C145 135 120 130 100 150" />
            <path d="M100 120 C125 105 150 110 160 95 C145 88 122 90 100 110" />
            <path d="M100 80 C120 65 142 68 152 53 C138 48 118 52 100 70" />
            <!-- Top bud -->
            <ellipse cx="100" cy="18" rx="8" ry="12" />
          </svg>
        </div>
        <!-- Floating accent -->
        <div class="absolute -bottom-4 -left-4 w-24 h-24 rounded-full border border-gold/20"></div>
        <div class="absolute -top-4 -right-4 w-16 h-16 rounded-full bg-sage/10"></div>
      </div>
    </div>
  </div>
</section>
