<section id="visit" class="py-24 md:py-32 px-6 bg-cream-dark/50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <p class="reveal text-xs uppercase tracking-[0.2em] text-gold mb-4 font-medium">Find Us</p>
      <h2 class="reveal reveal-delay-1 font-playfair text-4xl md:text-5xl mb-6">Visit Our Store</h2>
      <div class="reveal reveal-delay-2 divider-gold mx-auto"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Info column -->
      <div class="reveal reveal-delay-2 space-y-8">
        <!-- Address -->
        <div class="flex gap-4">
          <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0 mt-1">
            <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-lg mb-1">Address</h3>
            <p class="text-bronze-light leading-relaxed">
              301 Tanger Dr, Suite 112<br />
              Terrell, TX 75126
            </p>
          </div>
        </div>

        <!-- Email -->
        <div class="flex gap-4">
          <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0 mt-1">
            <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-lg mb-1">Email</h3>
            <a href="mailto:gugu@gugugifts.com" class="text-bronze-light hover:text-gold transition-colors">
              gugu@gugugifts.com
            </a>
          </div>
        </div>

        <!-- Hours -->
        <div class="flex gap-4">
          <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0 mt-1">
            <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-lg mb-1">Hours</h3>
            <p class="text-bronze-light text-sm leading-relaxed">
              Hours to be announced &mdash; follow us for updates!
            </p>
          </div>
        </div>
      </div>

      <!-- Map column -->
      <div class="reveal reveal-delay-3">
        <div class="rounded-2xl overflow-hidden border border-gold/20 shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3361.0!2d-96.2753!3d32.7191!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864ea5c0000000%3A0x0!2s301+Tanger+Dr+Terrell+TX+75126!5e0!3m2!1sen!2sus!4v1"
            width="100%"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Gugu Gifts location on Google Maps"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
